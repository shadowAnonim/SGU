<Page x:Class="SGU.Pages.AutorisationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SGU.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" MinHeight="450" MinWidth="800" 
      Title="Авторизация">

    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Логин:" Width="60"/>
                <TextBox x:Name="loginTb"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Пароль:" Width="60"/>
                <PasswordBox x:Name="passwordTb"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="registrationBtn" Content="Регистрация" Click="RegistrationBtn_Click"/>
                <Button x:Name="loginBtn" Content="Вход" Click="loginBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
