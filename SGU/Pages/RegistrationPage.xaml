<Page x:Class="SGU.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SGU.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" MinHeight="450" MinWidth="800"
      Title="Регистрация">

    <Grid>
        <StackPanel>
            <TextBox x:Name="Middle_name"></TextBox>
            <TextBox x:Name="First_name"></TextBox>
            <TextBox x:Name="Last_name"></TextBox>
            <ComboBox x:Name="Gender_box" SelectedIndex="0"></ComboBox>
            <TextBox x:Name="Email"></TextBox>
            <Button x:Name="Save" Click="saveBtn_Click"></Button>
    </StackPanel>
        
        </Grid>
</Page>
